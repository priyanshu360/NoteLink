# Frontend Environment Variables
# Copy this file to frontend/.env.local

# API Configuration
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=false
REACT_APP_ENABLE_SHARING=true

# UI Configuration
REACT_APP_THEME=light
REACT_APP_ITEMS_PER_PAGE=20
REACT_APP_MAX_NOTE_LENGTH=10000

# API Timeouts (in milliseconds)
REACT_APP_API_TIMEOUT=10000
REACT_APP_UPLOAD_TIMEOUT=30000

# Development Settings
REACT_APP_DEV_MODE=true
REACT_APP_DEBUG_API=true
REACT_APP_MOCK_API=false

# Authentication Settings
REACT_APP_TOKEN_REFRESH_THRESHOLD=300000
REACT_APP_SESSION_TIMEOUT=3600000

# Search Configuration
REACT_APP_SEARCH_DEBOUNCE_TIME=300
REACT_APP_MIN_SEARCH_LENGTH=2
REACT_APP_MAX_SEARCH_RESULTS=50